// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
// the regexp only work for webpack 4
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch extension",
            "type": "npm",
            "script": "watch:extension",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": { "reveal": "never" },
            "group": { "kind": "build", "isDefault": true },
            "dependsOn": ["watch extension webview"]
        },
        {
            "label": "watch extension webview",
            "type": "npm",
            "script": "watch:views",
            "problemMatcher": {
                "owner": "webpack",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\\[tsl\\] (ERROR|WARNING) in (.*)\\((\\d+),(\\d+)\\)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4
                    },
                    {
                        "regexp": "^\\s*TS(\\d+):\\s*(.*)$",
                        "code": 1,
                        "message": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Hash: .*",
                    "endsPattern": "^\\s*TS(\\d+):\\s*(.*)$|^Entrypoint"
                }
            },
            "isBackground": true,
            "presentation": { "reveal": "never" },
            "group": "build"
        }
    ]
}
