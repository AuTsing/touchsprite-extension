{
    "name": "touchsprite-extension",
    "displayName": "TouchSprite Extension",
    "description": "用于触动精灵脚本开发的插件",
    "version": "3.0.0",
    "publisher": "autsing",
    "repository": "https://github.com/AuTsing/touchsprite-extension",
    "keywords": [
        "touchsprite",
        "触动精灵",
        "触动"
    ],
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:lua",
        "onCommand:snapshop-extension.snapshop",
        "onCommand:touchsprite-extension.attachDeviceByInput",
        "onCommand:touchsprite-extension.attachDeviceBySearch",
        "onCommand:touchsprite-extension.detachDevice",
        "onCommand:touchsprite-extension.runProject",
        "onCommand:touchsprite-extension.runTestProject",
        "onCommand:touchsprite-extension.runScript",
        "onCommand:touchsprite-extension.stopScript",
        "onCommand:touchsprite-extension.uploadFile",
        "onCommand:touchsprite-extension.clearScript",
        "onCommand:touchsprite-extension.zipProject",
        "onCommand:touchsprite-extension.releaseProject"
    ],
    "main": "./dist/extension.js",
    "license": "GPL-3.0",
    "icon": "assets/images/logo.png",
    "contributes": {
        "configuration": {
            "title": "触动精灵开发插件",
            "properties": {
                "touchsprite-extension.accessKey": {
                    "description": "开发者AccessKey，可在开发者后台中获取，获取详情请查看插件介绍页",
                    "type": "string",
                    "default": ""
                },
                "touchsprite-extension.cookie": {
                    "description": "登陆Cookie，发布版本用，可在开发者后台网页中获取，获取详情请查看插件介绍页",
                    "type": "string",
                    "default": ""
                },
                "touchsprite-extension.snapOrient": {
                    "description": "截图方向",
                    "type": "string",
                    "default": "home键在右",
                    "enum": [
                        "home键在下",
                        "home键在右",
                        "home键在左"
                    ]
                },
                "touchsprite-extension.snapDir": {
                    "description": "截图保存文件夹",
                    "type": "string",
                    "default": ""
                },
                "touchsprite-extension.includeWhenSend": {
                    "description": "发送工程包含文件(夹)，请填写绝对路径，发送工程时以下文件(夹)会被发送至设备",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "touchsprite-extension.excludeWhenSend": {
                    "description": "发送工程排除文件(夹)，请填写文件(夹)名，发送工程时以下文件(夹)不会被发送至设备",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".git",
                        ".gitignore",
                        ".vscode",
                        "CHANGELOG.md"
                    ]
                },
                "touchsprite-extension.includeWhenZip": {
                    "description": "打包工程包含文件(夹)，请填写绝对路径，打包工程时以下文件(夹)会被打包",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "touchsprite-extension.excludeWhenZip": {
                    "description": "打包工程排除文件(夹)，请填写文件(夹)名，打包工程时以下文件(夹)不会被打包",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".git",
                        ".gitignore",
                        ".vscode",
                        "maintest.lua",
                        "CHANGELOG.md"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "touchsprite-extension.attachDeviceByInput",
                "title": "触动插件: 连接设备(手动输入)"
            },
            {
                "command": "touchsprite-extension.attachDeviceBySearch",
                "title": "触动插件: 连接设备(搜索设备)"
            },
            {
                "command": "touchsprite-extension.detachDevice",
                "title": "触动插件: 断开设备"
            },
            {
                "command": "touchsprite-extension.runProject",
                "title": "触动插件: 运行工程"
            },
            {
                "command": "touchsprite-extension.runTestProject",
                "title": "触动插件: 运行测试工程"
            },
            {
                "command": "touchsprite-extension.runScript",
                "title": "触动插件: 运行当前脚本"
            },
            {
                "command": "touchsprite-extension.stopScript",
                "title": "触动插件: 停止运行"
            },
            {
                "command": "touchsprite-extension.uploadFile",
                "title": "触动插件: 上传文件"
            },
            {
                "command": "touchsprite-extension.clearScript",
                "title": "触动插件: 清空脚本"
            },
            {
                "command": "touchsprite-extension.zipProject",
                "title": "触动插件: 打包工程"
            },
            {
                "command": "touchsprite-extension.releaseProject",
                "title": "触动插件: 发布工程"
            }
        ],
        "keybindings": [
            {
                "command": "touchsprite-extension.runTestProject",
                "key": "f5",
                "when": "editorLangId == lua"
            },
            {
                "command": "touchsprite-extension.runProject",
                "key": "f6",
                "when": "editorLangId == lua"
            },
            {
                "command": "touchsprite-extension.stopScript",
                "key": "f7",
                "when": "editorLangId == lua"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "@vscode/test-electron": "^2.0.3",
        "axios": "^1.4.0",
        "changelog-parser": "^2.8.1",
        "cors": "^2.8.5",
        "eslint": "^8.39.0",
        "express": "^4.18.2",
        "form-data": "^4.0.0",
        "glob": "^7.2.0",
        "jszip": "^3.10.1",
        "luaparse": "^0.3.1",
        "mocha": "^9.1.3",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.0",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1"
    }
}
