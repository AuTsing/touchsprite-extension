{
    "name": "touchsprite-extension",
    "displayName": "TouchSprite-Extension",
    "description": "用于触动精灵脚本开发的插件",
    "keywords": [
        "touchsprite",
        "触动精灵",
        "触动"
    ],
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "autsing",
    "repository": "https://github.com/AuTsing/touchsprite-extension",
    "categories": [
        "Other"
    ],
    "icon": "assets/images/logo.png",
    "activationEvents": [
        "onCommand:extension.TsStartServer",
        "onLanguage:lua",
        "onView:known-devices"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "触动精灵开发插件",
            "properties": {
                "touchsprite-extension.accessKey": {
                    "type": "string",
                    "default": "",
                    "description": "开发者AccessKey"
                },
                "touchsprite-extension.snapshotOrient": {
                    "type": "string",
                    "default": "home键在右",
                    "enum": [
                        "home键在下",
                        "home键在右",
                        "home键在左"
                    ],
                    "description": "截图方向"
                },
                "touchsprite-extension.snapshotDir": {
                    "type": "string",
                    "default": "",
                    "scope": "resource",
                    "description": "截图保存文件夹"
                },
                "touchsprite-extension.osType": {
                    "type": "string",
                    "default": "自动",
                    "enum": [
                        "自动",
                        "苹果",
                        "安卓",
                        "安卓模拟器"
                    ],
                    "description": "设备系统类型(如修改过设备名请自行选择)"
                },
                "touchsprite-extension.includePath": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "scope": "resource",
                    "description": "项目包含文件夹(运行项目时会将目录下文件与工程目录文件一起发送至设备)"
                },
                "touchsprite-extension.ignorePath": {
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".git",
                        ".gitignore",
                        ".vscode"
                    ],
                    "type": "array",
                    "scope": "resource",
                    "description": "项目忽略文件(夹)"
                },
                "touchsprite-extension.testRunFile": {
                    "type": "string",
                    "default": "main.test.lua",
                    "scope": "resource",
                    "description": "测试工程引导文件"
                }
            }
        },
        "commands": [
            {
                "command": "extension.TsStartServer",
                "title": "Ts: 启动服务"
            },
            {
                "command": "extension.TsConnect",
                "title": "Ts: 连接设备"
            },
            {
                "command": "extension.TsRunProject",
                "title": "Ts: 运行工程"
            },
            {
                "command": "extension.TsRunTest",
                "title": "Ts: 运行测试"
            },
            {
                "command": "extension.TsStopProject",
                "title": "Ts: 停止工程"
            },
            {
                "command": "extension.TsZip",
                "title": "Ts: 打包工程"
            },
            {
                "command": "extension.TsTest",
                "title": "Ts: Test"
            },
            {
                "command": "tree.search",
                "title": "搜索设备",
                "icon": "assets/images/refresh.png"
            },
            {
                "command": "tree.connect",
                "title": "连接设备"
            },
            {
                "command": "extension.snapshotor",
                "title": "Ts: 取点抓色"
            }
        ],
        "keybindings": [
            {
                "command": "extension.TsRunTest",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TsRunProject",
                "key": "f6",
                "mac": "f6",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.snapshotor",
                "key": "f8",
                "mac": "f8"
            },
            {
                "command": "extension.TsStopProject",
                "key": "shift+f5",
                "mac": "shift+f5",
                "when": "editorTextFocus"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "device-manager",
                    "title": "触动精灵",
                    "icon": "assets/images/phone.png"
                }
            ]
        },
        "views": {
            "device-manager": [
                {
                    "id": "known-devices",
                    "name": "已知设备"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "tree.search",
                    "when": "view == known-devices",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "tree.connect",
                    "when": "view == known-devices && viewItem == knownDevice"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "compile:extension": "tsc -p ./",
        "compile:views": "webpack --mode production",
        "lint": "eslint src --ext ts",
        "watch": "npm-run-all -p watch:*",
        "watch:extension": "tsc -watch -p ./",
        "watch:views": "webpack --watch --mode development",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/file-saver": "^2.0.1",
        "@types/glob": "^7.1.1",
        "@types/jszip": "^3.1.7",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/react": "^16.9.44",
        "@types/react-dom": "^16.9.8",
        "@types/vscode": "^1.42.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "antd": "^4.5.1",
        "css-loader": "^4.2.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "jimp": "^0.14.0",
        "mocha": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.2",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "jszip": "^3.2.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    }
}
