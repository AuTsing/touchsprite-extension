{
    "name": "touchsprite-extension",
    "displayName": "touchsprite-extension",
    "description": "extension for touchsprite",
    "keywords": [
        "touchsprite",
        "触动精灵",
        "触动"
    ],
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "AuTsing",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.startServer",
        "onCommand:extension.helloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "touchsprite-extension",
            "properties": {
                "vscodePluginDemo.devAccess": {
                    "type": "string",
                    "default": "",
                    "description": "开发者Access"
                },
                "vscodePluginDemo.showTip": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否在每次启动时显示欢迎提示！"
                }
            }
        },
        "commands": [{
                "command": "extension.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "extension.startServer",
                "title": "StartServer"
            }
        ],
        "menus": {
            "editor/context": [{
                "command": "extension.helloWorld",
                "group": "navigation"
            }],
            "editor/title": [{
                "command": "extension.helloWorld",
                "group": "navigation"
            }],
            "editor/title/context": [{
                "command": "extension.helloWorld",
                "group": "navigation"
            }],
            "explorer/context": [{
                    "command": "extension.helloWorld",
                    "group": "navigation"
                },
                {
                    "command": "extension.helloWorld",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [{
                "id": "deviceManager",
                "title": "设备管理",
                "icon": "images/phone.svg"
            }]
        },
        "views": {
            "deviceManager": [{
                    "id": "device1",
                    "name": "已知设备"
                },
                {
                    "id": "device2",
                    "name": "未知设备设备"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.18.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}