{
    "name": "touchsprite-extension",
    "displayName": "TouchSprite-Extension",
    "description": "用于触动精灵脚本开发的插件",
    "keywords": [
        "touchsprite",
        "触动精灵",
        "触动"
    ],
    "version": "0.0.7",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "autsing",
    "repository": "https://github.com/AuTsing/touchsprite-extension",
    "categories": [
        "Other"
    ],
    "icon": "images/logo.png",
    "activationEvents": [
        "onCommand:extension.TsStartServer",
        "onLanguage:lua",
        "onView:known-devices"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "触动精灵开发插件",
            "properties": {
                "touchsprite-extension.accessKey": {
                    "type": "string",
                    "default": "",
                    "description": "开发者AccessKey"
                },
                "touchsprite-extension.snapshotOrient": {
                    "type": "number",
                    "default": 1,
                    "enum": [
                        0,
                        1,
                        2
                    ],
                    "enumDescriptions": [
                        "home键在下",
                        "home键在右",
                        "home键在左"
                    ],
                    "description": "截图方向"
                },
                "touchsprite-extension.snapshotDir": {
                    "type": "string",
                    "default": "",
                    "scope": "resource",
                    "description": "截图保存文件夹"
                },
                "touchsprite-extension.osType": {
                    "type": "number",
                    "default": 0,
                    "enum": [
                        0,
                        1,
                        2,
                        3
                    ],
                    "enumDescriptions": [
                        "自动判断(如修改过设备名称请自行选择)",
                        "苹果",
                        "安卓",
                        "安卓模拟器"
                    ],
                    "description": "设备系统类型"
                },
                "touchsprite-extension.includePath": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "scope": "resource",
                    "description": "项目包含文件夹(运行项目时会将目录下文件与工程目录文件一起传送至设备)"
                },
                "touchsprite-extension.ignorePath": {
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".git",
                        ".gitignore",
                        ".vscode"
                    ],
                    "type": "array",
                    "scope": "resource",
                    "description": "项目忽略文件(夹)"
                },
                "touchsprite-extension.testRunFile": {
                    "type": "string",
                    "default": "main.test.lua",
                    "scope": "resource",
                    "description": "测试工程引导文件"
                }
            }
        },
        "commands": [
            {
                "command": "extension.TsStartServer",
                "title": "Ts: 启动服务"
            },
            {
                "command": "extension.TsConnect",
                "title": "Ts: 连接设备"
            },
            {
                "command": "extension.TsGetPicture",
                "title": "Ts: 截取屏幕"
            },
            {
                "command": "extension.TsRunProject",
                "title": "Ts: 运行工程"
            },
            {
                "command": "extension.TsRunTest",
                "title": "Ts: 运行测试"
            },
            {
                "command": "extension.TsStopProject",
                "title": "Ts: 停止工程"
            },
            {
                "command": "extension.TsZip",
                "title": "Ts: 打包工程"
            },
            {
                "command": "extension.TsTest",
                "title": "Ts: Test"
            },
            {
                "command": "tree.search",
                "title": "搜索设备",
                "icon": "images/refresh.png"
            },
            {
                "command": "tree.connect",
                "title": "连接设备"
            }
        ],
        "keybindings": [
            {
                "command": "extension.TsRunTest",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TsRunProject",
                "key": "f6",
                "mac": "f6",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.TsStopProject",
                "key": "shift+f5",
                "mac": "shift+f5",
                "when": "editorTextFocus"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "device-manager",
                    "title": "触动精灵",
                    "icon": "images/phone.png"
                }
            ]
        },
        "views": {
            "device-manager": [
                {
                    "id": "known-devices",
                    "name": "已知设备"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "tree.search",
                    "when": "view == known-devices",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "tree.connect",
                    "when": "view == known-devices && viewItem == knownDevice"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/file-saver": "^2.0.1",
        "@types/glob": "^7.1.1",
        "@types/jszip": "^3.1.7",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "file-saver": "^2.0.2",
        "jszip": "^3.2.2"
    }
}
